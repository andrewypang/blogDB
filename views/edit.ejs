
<%- include("partials/header"); -%>
<h1>Edit Post</h1>
<form class="" action="/posts/<%=_id%>/save" method="post">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="postTitle" value="<%=title%>">
    <label>Post</label>
    <textarea class="form-control" name="postBody" rows="10" cols="30"><%=content%></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Update Post</button>
</form>

<%- include("partials/footer"); -%>
