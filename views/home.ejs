<%- include("partials/header"); -%>


    <main class="container pb-5">

          <div class="row p-0 p-md-0 my-4 card bg-dark text-white">
            <img class="card-img p-0" src="/img/springfieldTownHall.webp" alt="" style="max-height: auto;object-fit: cover;filter: brightness(70%);">
            <div class="card-img-overlay">
                <div class="p-0 p-md-5 col-md-8 position-absolute bottom-0">
                    <h5 class="display-4 fst-italic card-title fs-2">Springfield Town Square</h5>
                    <p class="my-3 card-text"><%= startingContent %></p>
      
                </div>
            </div>
          </div>

        <div class="row row-cols-md-3 my-2 mb-lg-4">
            <%  posts.forEach(function(post){ %>

            <div class="col">
                <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm position-relative">
                    <div class="col p-4 d-flex flex-column position-static">
                        <h3 class="mb-0 fs-5"><%=post.title%></h3>
                        <div class="my-1 text-muted"><%=post.date.toLocaleDateString()+", "+weekday[post.date.getDay()]+" @ "+post.date.toLocaleTimeString()%></br>by <%=post.author%></div>
                        <% if(post.content.length > 100){  %>
                            <p class="card-text mb-auto fs-6 overflow-hidden" style="height: 6rem;"> <%- post.content.substring(0, 100).replace(/\n/g,"</br>") + " ..." %> </p>
                        <% } else {  %>
                            <p class="card-text mb-auto fs-6 overflow-hidden" style="height: 6rem;"> <%- post.content.replace(/\n/g,"</br>")  %> </p>
                            <% }  %>
                                
                        <p class="my-1">
                        <a href="/posts/<%=post._id%>" class="btn btn-outline-secondary">View</a>
                        </p>
                    </div>
                </div>
            </div>


            <% }) %>

            </div>
        </div>

    </main>

<%- include("partials/footer"); -%>
